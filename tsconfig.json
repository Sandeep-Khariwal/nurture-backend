{
  "compilerOptions": {
    "target": "es2017",
    "module": "CommonJS",
    "lib": ["dom", "es6", "es2017", "esnext.asynciterable"],
    "skipLibCheck": true,
    "sourceMap": true,
    "paths": {
      "@services/*": ["src/services/*"],
      "@routes/*": ["src/routes/*"],
      "@controller/*": ["../*"],
      "@models/*": ["src/models/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@enums/*": ["src/enums/*"],
      "@utils/*": ["src/utils/*"]
    },
    "outDir": "./dist",
    "rootDir": "./src",
    // "moduleResolution": "node",
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": "./" // Ensure this is correctly set to the root of the project
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts"]
}
